#:kivy 2.1.0

#:import NoTransition kivy.uix.screenmanager.NoTransition
#:include screen_main.kv
#:include screen_counter.kv

# ScreenManager:
<RootScreen>:
    id: screen_manager
    transition: NoTransition()
       
    ScreenMain:
        id: screen_main
        name: 'screen_main'
        screen_manager: screen_manager

    ScreenCounter:
        id: screen_counter
        name: 'screen_counter'
        screen_manager: screen_manager   

<ContentLogin>
    orientation: "vertical"
    spacing: "8dp"
    size_hint_y: None
    height: "180dp"

    MDTextField:
        id: tx_username
        hint_text: "Nama Pengguna"

    MDTextField:
        id: tx_password
        hint_text: "Password"
        password: True

    MDRectangleFlatIconButton:
        id: bt_login
        icon: "check"
        text:"MASUK"
        on_press: root.exec_login()
