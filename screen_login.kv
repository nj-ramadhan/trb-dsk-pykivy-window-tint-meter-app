#:kivy 2.1.0

<ScreenLogin>:
    MDBoxLayout:
        orientation: "vertical"

		# header layout
        MDBoxLayout:
            id: header_layout
            orientation: "horizontal"
            padding: 20
			spacing: 20
			size_hint_y: 0.2
			md_bg_color: "#111111"
                    
            Image:
                id: logo
                source:'asset/logo-trb-dark.png'
                size_hint_x: 0.15
                allow_stretch: True 

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.7

				MDLabel:
					id: title            
					text: "VEHICLE INSPECTION INTEGRATION SYSTEM"
					halign: "left"
					valign: "middle"
					font_style: 'H3'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: subtitle            
					text: "WINDOW TINT METER / WTM"
					halign: "left"
					valign: "middle"
					font_style: 'H5'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.15


				MDLabel:
					id: lb_time
					text: "12:34:00"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_date
					text: "17/08/2024"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_operator
					text: "Nama Operator"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_comm
					text: "Status : Disconnected"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"

		# main layout
		MDBoxLayout:
			orientation: "vertical"
			size_hint_y: 0.7
			padding: 50
			spacing: 30

			MDLabel:
				text: "SILAHKAN LOGIN"
				halign: "center"
				valign: "middle"
				font_style: 'H4'
				theme_text_color: "Custom"
				
			MDTextField:
				id: tx_username
				font_size: '40sp'
				icon_left: "account"
				hint_text: "Nama Pengguna"
				# text_color_normal: "#4471C4"
				text_color_focus: "#4471C4"
				# hint_text_color_normal: "#4471C4"
				hint_text_color_focus: "#4471C4"
				# line_color_normal: "#4471C4"
				line_color_focus: "#4471C4"	
				# icon_left_color_normal: "#4471C4"
				icon_left_color_focus: "#4471C4"				
				mode: "rectangle"

			MDTextField:
				id: tx_password
				font_size: '40sp'
				icon_left: "lock"
				hint_text: "Password"
				# text_color_normal: "#4471C4"
				text_color_focus: "#4471C4"				
				# hint_text_color_normal: "#4471C4"
				hint_text_color_focus: "#4471C4"
				# line_color_normal: "#4471C4"
				line_color_focus: "#4471C4"
				# icon_left_color_normal: "#4471C4"
				icon_left_color_focus: "#4471C4"
				mode: "rectangle"
				password: True

			MDBoxLayout:
				orientation: "horizontal"
				spacing: 100

				MDRectangleFlatIconButton:
					id: bt_login
					type: "large"
					size_hint_x: 0.5
					size_hint_y: 0.4
					icon: "login"
					text:"MASUK"
					text_color: "#EEEEEE"
					md_bg_color: "#4471C4"
					font_style: 'H6'
					on_press: root.exec_login()

				MDRectangleFlatIconButton:
					id: bt_cancel
					type: "large"
					size_hint_x: 0.5
					size_hint_y: 0.4
					icon: "cancel"
					text:"BATAL"
					text_color: "#EEEEEE"
					md_bg_color: "#FF2A2A"
					font_style: 'H6'
					on_press: root.exec_cancel()

		# footer layout
        MDBoxLayout:
            orientation: "horizontal"
			size_hint_y: 0.1

			MDBoxLayout:
				orientation: "horizontal"
				padding: 20
				spacing: 20
				md_bg_color: "#4471C4"
				size_hint_x: 0.4
				
				Image:
					source:'asset/logo-sorong.png'
					size_hint_x: 0.1
					allow_stretch: True  

				Image:
					source:'asset/logo-dishub.png'
					size_hint_x: 0.1
					allow_stretch: True  

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.8

					MDLabel:			
						text: "PEMERINTAH KABUPATEN SORONG"
						halign: "left"
						valign: "middle"
						font_style: 'Subtitle1'

					MDLabel:			
						text: "DINAS PERHUBUNGAN"
						halign: "left"
						valign: "middle"
						font_style: 'Subtitle1'

					MDLabel:			
						text: "UNIT PELAKSANA UJI BERKALA KENDARAAN BERMOTOR"
						halign: "left"
						valign: "middle"
						font_style: 'Subtitle1'

					MDLabel:
						text: " Klamasen, Distrik Mariat, Kabupaten Sorong, Papua Barat Daya. 98416"
						halign: "left"
						valign: "middle"
						md_bg_color: "#EEEEEE"
						theme_text_color: "Custom"
						text_color: "#000000"
						font_style: 'Subtitle1'

			MDBoxLayout:
				orientation: "vertical"
				padding: 20
				spacing: 20
				md_bg_color: "#FFC000"
				size_hint_x: 0.6

				MDLabel:			
					text: "INFORMASI"
					halign: "left"
					valign: "middle"
					font_style: 'H5'

				MDLabel:
					id: lb_info
					text: "Ambang Batas Kebisingan adalah 83 dB hingga 118 dB"
					halign: "left"
					valign: "middle"
					font_style: 'H6'
		
